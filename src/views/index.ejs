<%- include("partials/head.ejs")%>
    <%- include("partials/navigation.ejs")%>

        <div class="container p-4">
            <div class="row">
                <div class="card-columns">
                    <% images.forEach(image => { %>
                        <div class="card animated bounce">
                            <img src="<%= image.path  %>" class="card-img-top" alt="image1">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= image.title%>
                                </h5>
                                <p class="card-text">
                                    <%= image.description%>
                                </p>
                                <p class="card-text">
                                    <%= format(image.created_at) %>
                                </p>
                                <a href="/<%= image._id %>" class="btn btn-primary"> View Profile </a>
                            </div>
                        </div>
                        <% })%>
                </div>
            </div>
        </div>

        <%- include("partials/footer.ejs")%>