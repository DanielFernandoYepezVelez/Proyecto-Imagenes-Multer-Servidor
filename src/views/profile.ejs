<%- include("partials/head.ejs")%>
    <%- include("partials/navigation.ejs")%>

        <div class="container p-4">
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <div class="card animated bounce">
                        <img src="<%= image.path%>" class="card-img-top" alt="image1">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= image.title%>
                            </h5>
                            <p class="card-text">
                                <%= image.description%>
                            </p>
                            <p class="card-text">
                                <%= format(image.created_at) %>
                            </p>
                            <a href="/image/<%= image._id %>/delete" class="btn btn-danger btn-block"> Delete Image </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("partials/footer.ejs")%>